# MediCore HMS Environment Variables
NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# PostgreSQL (use 'postgres' for Docker, 'localhost' for local dev)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=medicore
DB_USER=medicore_admin
DB_PASSWORD=medicore_secure_2024
DATABASE_URL=postgresql://medicore_admin:medicore_secure_2024@postgres:5432/medicore

# Redis (use 'redis' for Docker, 'localhost' for local dev)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=medicore_redis_2024

# JWT
JWT_SECRET=medicore-jwt-secret-change-in-production-2024
JWT_REFRESH_SECRET=medicore-refresh-secret-change-in-production-2024
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS (comma-separated allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://localhost:80,http://localhost

# AI Service (use 'ai_service' for Docker, 'localhost' for local dev)
AI_SERVICE_URL=http://ai_service:8000

# Frontend
FRONTEND_URL=http://localhost:3000
VITE_API_URL=/api
VITE_SOCKET_URL=
VITE_AI_URL=/ai
VITE_APP_NAME=MediCore HMS

